{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<br/>
<br/>

<main class="container">
    <div class="col-12">


    <h1 align-item ="center">Panier</h1>
    <br/>

    {% if isEmpty %}
        <p>Votre panier est vide !</p>
    {% else %}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>

                <th>Prix</th>
                <th>Quantite</th>
                <th>Total</th>
                <th>  Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}
                <tr>
                    <td>{{ element.produit.name }}</td>
                    <td>{{ element.produit.price }} DH</td>
                    <td>{{ element.quantite }}</td>
                    <td>{{ element.produit.price * element.quantite }} DH</td>
                    <td>
                    <a href="{{path("cart_add",{id:element.produit.id})}}" class="btn btn-outline-primary"> + </a>
                     <a href="{{path("cart_delete",{id:element.produit.id})}}" class="btn btn-outline-danger">Remove </a>
                     <a href="{{path("cart_remove",{id:element.produit.id})}}" class="btn btn-outline-warning"> - </a>

                     </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre Panier est Vide!!</td>
                </tr>
            {% endfor %}
        </tbody>
       <!-- <tfoot>
        <tr>
        <td colspan="3">Total</td>
        <td class="text-end">{{total}} DH</td>
        <td></td>

        </tr>
        </tfoot>-->
    </table>
    <br/>
    <br/>

    <div>
         Total : {{total}}   DH

    </div>
</div>
</main>

    {% endif %}
{% endblock %}