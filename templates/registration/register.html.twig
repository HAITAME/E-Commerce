{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="container my-3">
    <div class="row">
        <div class="col">
            <h1>S'inscrire</h1>
         
            {{ form_start(registrationForm) }}
               <fieldser>
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.codepostal) }}
                {{ form_row(registrationForm.city) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}
                
                </fieldser>

                <button type="submit" class="btn-primary btn-lg my-3">S'inscrire</button>
            {{ form_end(registrationForm) }}
            <hr>
            <p>Déjà membre?<a class="nav-link" href="{{ path('app_login')}}">Se connecter</a><p>
    
        </div>
    </div>
</section>
{% endblock %}
